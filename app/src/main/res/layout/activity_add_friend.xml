                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:padding="12dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/imoge07_confusedface"
                app:layout_constraintBottom_toBottomOf="@+id/iv_add_friend_sticker4_bg"
                app:layout_constraintEnd_toEndOf="@+id/iv_add_friend_sticker4_bg"
                app:layout_constraintStart_toStartOf="@+id/iv_add_friend_sticker4_bg"
                app:layout_constraintTop_toTopOf="@+id/iv_add_friend_sticker4_bg" />

            <TextView
                android:id="@+id/iv_add_friend_sticker4_count"
