<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F0F0F0"
    tools:context=".StickerDetailFragment">

    <ImageView
        android:id="@+id/iv_btn_back"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:padding="14dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/gray_a" />

    <ImageView
        android:id="@+id/iv_sticker_icon_background"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/shape_circle_background"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/iv_sticker_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:padding="12dp"
        android:src="@drawable/imoge01_thumbsup"
        app:layout_constraintBottom_toBottomOf="@+id/iv_sticker_icon_background"
        app:layout_constraintEnd_toEndOf="@+id/iv_sticker_icon_background"
        app:layout_constraintStart_toStartOf="@+id/iv_sticker_icon_background"
        app:layout_constraintTop_toTopOf="@+id/iv_sticker_icon_background" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="24dp"
        android:text="스티커 이름"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_btn_edit"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_sticker_icon_background" />

    <TextView
        android:id="@+id/tv_btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@drawable/shape_rectangle_radius_12"
        android:backgroundTint="#6590FF"
        android:paddingHorizontal="18dp"
        android:paddingVertical="8dp"
        android:text="수정"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_btn_delete"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:background="@drawable/shape_rectangle_radius_12"
        android:backgroundTint="#FF6565"
        android:gravity="center"
        android:text="스티커 삭제하기"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>