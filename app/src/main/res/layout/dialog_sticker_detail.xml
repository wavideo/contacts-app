<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:minHeight="600dp">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="스티커"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="스티커 이름"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/txt_title"
        app:layout_constraintTop_toBottomOf="@id/txt_title" />

    <EditText
        android:id="@+id/txt_subtitle_name"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#F0F0F0"
        android:gravity="center_vertical"
        android:text="스티커 이름"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/txt_subtitle"
        app:layout_constraintTop_toBottomOf="@id/txt_subtitle" />

    <TextView
        android:id="@+id/txt_icon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="아이콘"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/txt_subtitle_name"
        app:layout_constraintTop_toBottomOf="@id/txt_subtitle_name" />


    <!--GirdItemAdapter랑 연결(은혜)-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_sticker_list"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layoutManager="GridLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_icon_title"
        app:spanCount="5" />


</androidx.constraintlayout.widget.ConstraintLayout>