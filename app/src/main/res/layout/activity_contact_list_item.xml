<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info"
    android:layout_width="match_parent"
    android:layout_height="100dp">


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11.5dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/notosanskr_medium"
        android:text="정호정 팀원"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/iv_pro_fill"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_pro_fill"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/gang"
        android:background="@drawable/shape_circle_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_sticker0"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="11dp"
        android:src="@drawable/imoge33_policecarlight"
        android:background="@drawable/shape_circle_background"
        app:layout_constraintStart_toEndOf="@+id/iv_pro_fill"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_sticker0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="3dp"
        android:text="99"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/iv_sticker0"
        app:layout_constraintTop_toTopOf="@+id/iv_sticker0"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/iv_sticker1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="28dp"
        android:src="@drawable/imoge16_cookedrice"
        android:background="@drawable/shape_circle_background"
        app:layout_constraintStart_toEndOf="@+id/iv_sticker0"
        app:layout_constraintTop_toTopOf="@+id/iv_sticker0" />

    <TextView
        android:id="@+id/tv_sticker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="3dp"
        android:text="99"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/iv_sticker1"
        app:layout_constraintTop_toTopOf="@+id/iv_sticker1"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/iv_sticker2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="28dp"
        android:src="@drawable/imoge13_alarmclock"
        android:background="@drawable/shape_circle_background"
        app:layout_constraintStart_toEndOf="@+id/iv_sticker1"
        app:layout_constraintTop_toTopOf="@+id/iv_sticker1" />

    <TextView
        android:id="@+id/tv_sticker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="3dp"
        android:text="99"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/iv_sticker2"
        app:layout_constraintTop_toTopOf="@+id/iv_sticker2"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/iv_sticker3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="28dp"
        android:src="@drawable/imoge19_partypopper"
        android:background="@drawable/shape_circle_background"
        app:layout_constraintStart_toEndOf="@+id/iv_sticker2"
        app:layout_constraintTop_toTopOf="@+id/iv_sticker2" />

    <TextView
        android:id="@+id/tv_sticker3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="3dp"
        android:text="99"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/iv_sticker3"
        app:layout_constraintTop_toTopOf="@+id/iv_sticker3"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/iv_sticker_recently"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="60dp"
        android:src="@drawable/imoge01_thumbsup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_pro_fill" />

    <ImageView
        android:id="@+id/iv_call"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/call"
        android:backgroundTint="@color/white"
        android:background="@drawable/shape_circle_background"
        app:layout_constraintStart_toEndOf="@+id/iv_sticker_recently"
        app:layout_constraintTop_toTopOf="@+id/iv_sticker_recently" />

    <View
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="1dp"
        android:background="@color/gray_b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/info"/>

    <TextView
        android:id="@+id/tv_sticker_recently"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="-5dp"
        android:background="@drawable/shape_circle_background"
        android:backgroundTint="@color/red"
        android:paddingStart="5dp"
        android:paddingTop="1dp"
        android:textColor="@color/white"
        android:text="4"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_sticker_recently"
        app:layout_constraintTop_toTopOf="@+id/iv_sticker_recently" />


</androidx.constraintlayout.widget.ConstraintLayout>
