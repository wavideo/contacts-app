<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_sticker_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/horizontal_margin"
        android:layout_marginBottom="@dimen/vertical_margin"
        android:background="@drawable/shape_rectangle_radius_12"
        android:backgroundTint="@color/white"
        android:elevation="3dp"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_sticker_icon_background"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/shape_circle_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
   />

        <ImageView
            android:id="@+id/iv_sticker_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:padding="12dp"
            android:src="@drawable/imoge01_thumbsup"
            app:layout_constraintBottom_toBottomOf="@+id/iv_sticker_icon_background"
            app:layout_constraintEnd_toEndOf="@+id/iv_sticker_icon_background"
            app:layout_constraintStart_toStartOf="@+id/iv_sticker_icon_background"
            app:layout_constraintTop_toTopOf="@+id/iv_sticker_icon_background" />


        <TextView
            android:id="@+id/tv_sticker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:text="스티커 이름"
            android:textSize="@dimen/object_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_sticker_icon_background"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_contact_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_rectangle_radius_999"
            android:backgroundTint="@color/background_basic"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_ic_arraow"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_contact_size_ic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_groups"
                android:tint="@color/gray_a"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_contact_size_num"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_contact_size_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="99"
                android:textSize="@dimen/count"
                android:textStyle="bold"
                android:tint="@color/gray_a"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_contact_size_ic"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_ic_arraow"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_arrow_forward"
            android:tint="@color/gray_b"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>